<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:Nindo.Mobile.ViewModels;assembly=Nindo.Mobile"
             x:Class="Nindo.Mobile.Views.YoutubeSmallPage"
             xmlns:controls="clr-namespace:Nindo.Mobile.Controls;assembly=Nindo.Mobile">

    <ContentView.BindingContext>
        <viewModels:YoutubeSmallViewModel />
    </ContentView.BindingContext>

    <ContentView.Content>
        <controls:ScoreboardSmallTemplate 
            CollectionViewScoreboard="{Binding Youtube}"
            BoxViewLeftColor="#d44141"
            BoxViewRightColor="#d44141"
            ImageSource="youtube.png"
            RefreshViewCommand="{Binding RefreshCommand}"
            LabelText="Ø Views nach 5 Tagen"/>
    </ContentView.Content>
</ContentView>