<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:services="clr-namespace:Nindo.Mobile.Services;assembly=Nindo.Mobile"
             xmlns:viewModels="clr-namespace:Nindo.Mobile.ViewModels;assembly=Nindo.Mobile"
             xmlns:controls="clr-namespace:Nindo.Mobile.Controls;assembly=Nindo.Mobile"
             x:Class="Nindo.Mobile.Views.TwitchSmallPage">

    <ContentView.BindingContext>
        <viewModels:TwitchSmallViewModel />
    </ContentView.BindingContext>

    <ContentView.Content>
        <controls:ScoreboardSmallTemplate 
            CollectionViewScoreboard="{Binding Twitch}"
            BoxViewLeftColor="#816ea4"
            BoxViewRightColor="#816ea4"
            ImageSource="twitch.png"
            RefreshViewCommand="{Binding RefreshCommand}"
            LabelText="Ø Viewer"/>
    </ContentView.Content>
</ContentView>